/* pages/contact/contact.wxss */
.container{
    background-color: #f2f2f2;
    color: #666666;
    font-size: 30rpx;
}
.header-img image{
    width: 100%;
}
.item-wrapper{
    padding: 0 30rpx;
    background-color: #fff;
}
.item{
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 100rpx;
}
.item .title{
    font-size: 32rpx;
    color: #333333;
}
.item + .item{
    border-top: 1rpx solid #e5e5e5;
}
.item > view{
    display: flex;
    justify-content: flex-start;
}
.item > view > text{
    display: flex;
    width: 120rpx;
    align-items: center;
    justify-content: center;
}
.item image{
    width: 48rpx;
    height: 48rpx;
}
.item text{
    font-size: 30rpx;
}